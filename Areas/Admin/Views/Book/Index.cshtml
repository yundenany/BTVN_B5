@model IEnumerable<BTVN_B5_5.Models.Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<h2>Index</h2>

<h3>@Html.ActionLink("Thêm mới", "Create", "Book")</h3>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="panel panel-default">
                <div class="panel panel-heading">
                    <strong>@item.Title</strong>
                   @* <p style="font-weight:600;">@item.Title</p>*@
                    <div class="pull-right">
                        @Html.ActionLink("Edit", "Edit", "Book", new { id = item.Id }, new
                        {
                            @class =
                        "btn"
                        })
                    </div>
                </div>
                <div class="panel-body">
                    <img style="align-self:center;" alt="@item.Title"
                         src="~/Content/ImageBooks/@item.Image" width="125" height="150" />
                    <p><strong>Nhà Sản Xuất </strong>@item.Author</p>
                    <p><strong>Loại: </strong>@item.Category.CategoryName</p>   
                </div>
                <div class="panel-footer clearfix">
                    <div class="pull-right">
                        @Html.ActionLink("Chi tiết", "Details", "Book", new { id = item.Id }, new
                        {
                        @class = "btn btn-default"
                        })
                        @Html.ActionLink("Xóa", "Delete", "Book", new { id = item.Id }, new
                        {
                            @class =
                        "btn btn-success"
                        })
                        <style>
                            .btn-success {
                                background-color: #333;
                            }
                        </style>

                    </div>
                </div>
            </div>
        </div>
    }
</div>

